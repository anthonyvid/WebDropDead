<div class="container mt-5">
	<h2 class="text-center mb-4">Start a New Game</h2>
	<% if flash[:alert] %>
	<div class="alert alert-danger text-center mb-3" role="alert">
		<%= flash[:alert] %>
	</div>
	<% end %>
	<%= form_with(model: @game, url: games_path, local: true) do |form| %>
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="mb-4">
				<%= form.label :number_of_players, "Number of Players", class: 'form-label' %>
				<%= form.number_field :number_of_players, class: 'form-control', required: true, placeholder: 'Enter number of players' %>
			</div>
			<div class="mb-4">
				<%= form.label :number_of_sides, "Number of Sides on Die", class: 'form-label' %>
				<%= form.number_field :number_of_sides, class: 'form-control', required: true, placeholder: 'Enter number of sides', min: 2 %>
			</div>
			<div class="mb-4">
				<%= form.label :number_of_dice, "Number of Dice", class: 'form-label' %>
				<%= form.number_field :number_of_dice, class: 'form-control', required: true, placeholder: 'Enter number of dice' %>
			</div>
			<div class="mt-4">
				<%= form.submit 'Start Game', class: 'btn btn-primary btn-lg me-2' %>
				<%= link_to 'Back to Account', account_path, class: 'btn btn-secondary btn-lg' %>
			</div>
		</div>
	</div>
	<% end %>
</div>